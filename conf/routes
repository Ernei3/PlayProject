
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index

GET         /categories                 controllers.CategoryController.categories
GET         /addCategoryMenu            controllers.CategoryController.addCategoryMenu
POST        /addCategory                controllers.CategoryController.addCategory
GET         /updateCategoryMenu/:id     controllers.CategoryController.updateCategoryMenu(id: Int)
POST        /updateCategory             controllers.CategoryController.updateCategory
GET         /removeCategory/:id         controllers.CategoryController.removeCategory(id: Int)

GET         /subcategories              controllers.SubcategoryController.subcategories
GET         /subByCat/:catId            controllers.SubcategoryController.subByCat(catId :Int)
GET         /addSubMenu                 controllers.SubcategoryController.addSubMenu
POST        /addSub                     controllers.SubcategoryController.addSub
GET         /updateSubMenu/:id          controllers.SubcategoryController.updateSubMenu(id: Int)
POST        /updateSub                  controllers.SubcategoryController.updateSub
GET         /removeSub/:id              controllers.SubcategoryController.removeSub(id: Int)

GET         /products                   controllers.ProductController.products
GET         /productsBySub/:subId        controllers.ProductController.productsBySub(subId: Int)
GET         /productDetails/:id         controllers.ProductController.productDetails(id: Int)
GET         /addProductMenu             controllers.ProductController.addProductMenu
POST        /addProduct                 controllers.ProductController.addProduct
GET         /updateProductMenu/:id      controllers.ProductController.updateProductMenu(id: Int)
POST        /updateProduct              controllers.ProductController.updateProduct
GET         /removeProduct/:id          controllers.ProductController.removeProduct(id: Int)

GET         /reviews/:productId         controllers.HomeController.reviews(productId: Int)
GET         /addReviewMenu/             controllers.HomeController.addReviewMenu
POST        /addReview                  controllers.HomeController.addReview
PUT         /updateReview               controllers.HomeController.updateReview
DELETE      /removeReview               controllers.HomeController.removeReview

GET         /wishlist                   controllers.HomeController.wishlist
POST        /addToWishlist              controllers.HomeController.addToWishlist
PUT         /updateWishlist             controllers.HomeController.updateWishlist
DELETE      /removeFromWishlist         controllers.HomeController.removeFromWishlist

GET         /basket                     controllers.HomeController.basket
POST        /addToBasket                controllers.HomeController.addToBasket
PUT         /changeQuantity             controllers.HomeController.changeQuantity
DELETE      /removeFromBasket           controllers.HomeController.removeFromBasket

GET         /orders                     controllers.HomeController.orders
GET         /orderDetails/:id           controllers.HomeController.orderDetails(id: Int)
POST        /addOrder                   controllers.HomeController.addOrder
PUT         /updateOrder                controllers.HomeController.updateOrder
DELETE      /removeOrder                controllers.HomeController.removeOrder

GET         /orderedProducts/:orderId   controllers.HomeController.orderedProducts(orderId: Int)
POST        /addToOrder                 controllers.HomeController.addToOrder
PUT         /changeOrdered              controllers.HomeController.changeOrdered
DELETE      /removeOrdered              controllers.HomeController.removeOrdered

GET         /orderAddress/:orderId      controllers.HomeController.orderAddress(orderId: Int)
POST        /addAddress                 controllers.HomeController.addAddress
PUT         /changeAddress              controllers.HomeController.changeAddress
DELETE      /removeAddress              controllers.HomeController.removeAddress

GET         /payment/:orderId           controllers.HomeController.payment(orderId: Int)
POST        /sendPayment                controllers.HomeController.sendPayment
PUT         /changePayment              controllers.HomeController.changePayment
DELETE      /removePayment              controllers.HomeController.removePayment



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


      