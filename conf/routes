
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index


GET         /products                   controllers.HomeController.products
POST        /addProduct                 controllers.HomeController.products
PUT         /changeProduct              controllers.HomeController.products
DELETE      /removeProduct              controllers.HomeController.products

GET         /categories                 controllers.HomeController.categories
POST        /addCategory                controllers.HomeController.categories
PUT         /changeCategory             controllers.HomeController.categories
DELETE      /removeCategory             controllers.HomeController.categories

GET         /bestsellers                controllers.HomeController.bestsellers
POST        /addBestseller              controllers.HomeController.bestsellers
PUT         /changeBestseller           controllers.HomeController.bestsellers
DELETE      /removeBestseller           controllers.HomeController.bestsellers

GET         /new                        controllers.HomeController.newProducts
POST        /addNew                     controllers.HomeController.newProducts
PUT         /changeNew                  controllers.HomeController.newProducts
DELETE      /removeNew                  controllers.HomeController.newProducts

GET         /reviews                    controllers.HomeController.reviews
POST        /addReview                  controllers.HomeController.reviews
PUT         /changeReview               controllers.HomeController.reviews
DELETE      /removeReview               controllers.HomeController.reviews

GET         /wishlist                   controllers.HomeController.wishlist
POST        /addToWishlist              controllers.HomeController.wishlist
PUT         /changeQuantity             controllers.HomeController.wishlist
DELETE      /removeFromWishlist         controllers.HomeController.wishlist

GET         /basket                     controllers.HomeController.basket
POST        /addToBasket                controllers.HomeController.basket
PUT         /changeQuantity             controllers.HomeController.basket
DELETE      /removeFromBasket           controllers.HomeController.basket

GET         /orderAddress               controllers.HomeController.orderAddress
POST        /sendAddress                controllers.HomeController.orderAddress
PUT         /changeAddress              controllers.HomeController.orderAddress
DELETE      /removeAddress              controllers.HomeController.orderAddress

GET         /payment                    controllers.HomeController.payment
POST        /sendPayment                controllers.HomeController.payment
PUT         /changePayment              controllers.HomeController.payment
DELETE      /removePayment              controllers.HomeController.payment

GET         /orders                     controllers.HomeController.orders
POST        /addOrder                   controllers.HomeController.orders
PUT         /changeOrder                controllers.HomeController.orders
DELETE      /removeOrder                controllers.HomeController.orders





# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


      